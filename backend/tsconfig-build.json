{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@root/*": ["src/*"],
      "@app/*": ["src/app/*"],
      "@modules/*": ["src/app/modules/*"],
      "@shared/*": ["src/app/shared/*"],
      "@lib/*": ["src/app/lib/*"],
      "@database/*": ["src/database/*"],
      "@config/*": ["src/config/*"]
    },
    "skipLibCheck": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["./src"],
  "exclude": ["node_modules", "coverage", "./__tests__", "**/*/*.test.ts"]
}
