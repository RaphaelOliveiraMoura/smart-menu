{
  "name": "smart-menu-backend",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "license": "MIT",
  "scripts": {
    "start": "node -r ./paths-resolver.js dist/index.js",
    "dev": "ts-node-dev -r tsconfig-paths/register --respawn --transpileOnly ./src/index.ts",
    "build": "tsc --p ./tsconfig-build.json",
    "test": "NODE_ENV=test jest --coverage=false --runInBand",
    "test:dev": "NODE_ENV=test jest --watchAll --runInBand",
    "fix": "yarn build && eslint . --ext .ts --fix",
    "lint": "yarn build && eslint . --ext .ts",
    "typeorm-ts": "ts-node -r tsconfig-paths/register ./node_modules/.bin/typeorm",
    "db:migration:create": "yarn typeorm-ts migration:create -c migrations -n ",
    "db:migration:run": "yarn typeorm-ts migration:run -c migrations",
    "db:seed:create": "yarn typeorm-ts migration:create -c seed -n ",
    "db:seed:run": "yarn typeorm-ts migration:run -c seed",
    "db:drop": "yarn typeorm-ts schema:drop -c migrations",
    "db:sync": "yarn typeorm-ts schema:sync -c migrations",
    "precommit": "lint-staged",
    "prepush": "cross-env CI=true yarn test"
  },
  "keywords": [],
  "author": "Raphael de Oliveira <raphaeldeoliveiramoura@gmail.com>",
  "_moduleAliases": {
    "@root": "dist",
    "@app": "dist/app",
    "@modules": "dist/app/modules",
    "@shared": "dist/app/shared",
    "@lib": "dist/app/lib",
    "@database": "dist/database",
    "@config": "dist/config"
  },
  "lint-staged": {
    "*.ts": [
      "yarn fix",
      "cross-env CI=true yarn test --findRelatedTests"
    ]
  },
  "dependencies": {
    "@types/node": "^14.0.1",
    "cors": "^2.8.5",
    "date-fns": "^2.14.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "jsonwebtoken": "^8.5.1",
    "module-alias": "^2.2.2",
    "pg": "^8.1.0",
    "reflect-metadata": "^0.1.13",
    "socket.io": "^2.4.0",
    "sqlite3": "^4.2.0",
    "ts-node": "^8.8.2",
    "tsconfig-paths": "^3.9.0",
    "tsyringe": "^4.3.0",
    "typeorm": "^0.2.24",
    "typescript": "^3.8.3",
    "yup": "^0.28.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.6",
    "@types/faker": "^4.1.12",
    "@types/jest": "^25.2.1",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/socket.io": "^2.1.6",
    "@types/supertest": "^2.0.9",
    "@types/yup": "^0.28.3",
    "@typescript-eslint/eslint-plugin": "^2.28.0",
    "@typescript-eslint/parser": "^2.28.0",
    "cross-env": "^7.0.2",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-import-helpers": "^1.0.2",
    "eslint-plugin-prettier": "^3.1.3",
    "faker": "^4.1.0",
    "jest": "^25.3.0",
    "lint-staged": "^10.1.3",
    "prettier": "^2.0.5",
    "supertest": "^4.0.2",
    "ts-jest": "^25.5.1",
    "ts-node-dev": "^1.0.0-pre.44"
  }
}
