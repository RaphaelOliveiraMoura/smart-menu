    "@services": "dist/app/services",
    "@models": "dist/app/models",
    "@utils": "dist/app/utils",
    "@database": "dist/database",
    "@config": "dist/config"
  },
  "lint-staged": {
    "*.ts": [
      "yarn fix",
      "cross-env CI=true yarn test --findRelatedTests"
    ]
  },
  "dependencies": {
    "cors": "^2.8.5",
